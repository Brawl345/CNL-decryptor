{
  "name": "cnl-decryptor",
  "version": "2.1.1",
  "description": "Click'N'Load Decryptor",
  "author": "Brawl345",
  "license": "Unlicense",
  "repository": {
    "url": "https://github.com/Brawl345/CNL-decryptor/"
  },
  "type": "module",
  "scripts": {
    "dev": "tsx build.ts",
    "typecheck": "tsc --noEmit source/*.ts",
    "start:chrome": "web-ext run -t chromium",
    "start:firefox": "web-ext run -t firefox-desktop",
    "build": "cross-env NODE_ENV=\"production\" tsx build.ts",
    "lint": "eslint --ignore-path .gitignore .",
    "format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. .",
    "web-ext-lint": "npm run build && web-ext lint",
    "web-ext:build": "npm run build && web-ext build --overwrite-dest",
    "web-ext:upload": "npm run web-ext:build && web-ext sign --channel=listed"
  },
  "webExt": {
    "sourceDir": "./public/"
  },
  "devDependencies": {
    "@eslint/js": "9.9.0",
    "@types/chrome": "0.0.269",
    "@types/eslint__js": "8.42.3",
    "cross-env": "7.0.3",
    "esbuild": "0.23.0",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-unicorn": "55.0.0",
    "globals": "15.9.0",
    "prettier": "3.3.3",
    "tsx": "4.16.5",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.0.1",
    "web-ext": "8.2.0"
  },
  "dependencies": {
    "crypto-es": "2.1.0"
  }
}
